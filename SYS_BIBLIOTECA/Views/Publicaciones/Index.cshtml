@model IEnumerable<SYS_BIBLIOTECA.Models.Publicacione>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4">Lista de Publicaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Crear Nueva Publicación</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contenido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contenido)
                </td>
                <td>
                    <img src="@item.Imagen" alt="Imagen de la Publicación" class="img-thumbnail" style="max-width: 150px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.NombreCompleto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
