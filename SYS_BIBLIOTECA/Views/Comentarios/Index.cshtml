@model IEnumerable<SYS_BIBLIOTECA.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4">Lista de Comentarios</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Crear Nuevo Comentario</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comentario1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPublicacionNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentario1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPublicacionNavigation.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
